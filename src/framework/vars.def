// DEF_VAR(name, type, default value)
// Allowed types:
//      (const) int, float, double, long double, std::string, bool
// e.g.
// DEF_VAR(foo, std::string, "Hallo")
// DEF_VAR(bar, const int, 15)
//
// Wrap arguments with comma in VAR_ARG:
//  DEF_VAR(field, VAR_ARG(std::array<int, 5>), VAR_ARG(5, 4, 3))

